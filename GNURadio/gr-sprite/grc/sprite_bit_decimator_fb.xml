<?xml version="1.0"?>
<block>
  <name>Bit Decimator</name>
  <key>sprite_bit_decimator_fb</key>
  <category>Sprite</category>
  <import>import sprite</import>
  <make>sprite.bit_decimator_fb()</make>

    <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <sink>
    <name>threshold</name>
    <type>float</type>
  </sink>

    <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
