<?xml version="1.0"?>
<block>
  <name>Peak Decimator</name>
  <key>sprite_peak_decimator_ff</key>
  <category>Sprite</category>
  <import>import sprite</import>
  <make>sprite.peak_decimator_ff($sps)</make>

  <param>
    <name>Samples Per Chip</name>
    <key>sps</key>
    <value>1</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
